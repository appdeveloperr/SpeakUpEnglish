<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.ahsens.speakupenglish.admPanel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Admin Panel"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:id="@+id/admtv"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@drawable/exit"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/admOut"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/admtv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:id="@+id/stdList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student's List"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:id="@+id/tchList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Teacher's List"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:id="@+id/delUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete user"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:background="@drawable/button"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"/>


        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
